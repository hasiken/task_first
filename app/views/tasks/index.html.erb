<h1>ユーザーのログイン</h1>
<%= link_to 'サインアップ', signup_path %>
<%= link_to 'ログイン', login_path %>
<%= link_to 'ログアウト', logout_path, method: :delete %>

<h1>タスク一覧</h1>

<ul>
    <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %><%= task.content %> &gt; <%= task.status %></li>
    <% end %>
</ul>
<% if logged_in? %>
<%= link_to '新規タスクの投稿', new_task_path %>
<% else %>
<h3>ログインしてください</h3>　
<% end %>